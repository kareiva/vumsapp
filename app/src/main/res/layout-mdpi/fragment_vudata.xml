<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/vudata">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daugiau"
        android:id="@+id/buttonExtended"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:onClick="openNewActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Slėgis: 9999.9 hPa"
        android:id="@+id/reiksme2"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/buttonExtended"
        android:layout_toRightOf="@+id/textView4"
        android:gravity="center"
        android:layout_alignRight="@+id/reiksme1"
        android:layout_alignEnd="@+id/reiksme1"
        android:layout_marginRight="44dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vėjo greitis: 39.1 kts"
        android:id="@+id/reiksme3"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/buttonExtended"
        android:layout_alignLeft="@+id/reiksme2"
        android:layout_alignStart="@+id/reiksme2"
        android:gravity="center"
        android:layout_alignRight="@+id/reiksme2"
        android:layout_alignEnd="@+id/reiksme2"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tiesioginiai duomenys is Vilniaus Universiteteo. Atnaujinta 2014-*05-05 17:45"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:textSize="8dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-30,9 OC"
        android:id="@+id/reiksme1"
        android:layout_marginTop="43dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_toEndOf="@+id/imageView"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="57dp"
        android:layout_alignLeft="@+id/buttonExtended"
        android:layout_alignStart="@+id/buttonExtended"
        android:layout_marginLeft="63dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginRight="33dp"
        android:src="@drawable/giedra_saule"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="47dp"
        android:layout_marginBottom="57dp"
        android:layout_alignTop="@+id/reiksme1"
        android:layout_alignRight="@+id/buttonExtended"
        android:layout_alignEnd="@+id/buttonExtended"
        android:layout_alignBottom="@+id/reiksme5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MDPI"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_toEndOf="@+id/buttonExtended"
        android:src="@drawable/sv"
        android:layout_alignBottom="@+id/reiksme3"
        android:layout_toRightOf="@+id/buttonExtended"
        android:layout_marginTop="28dp"
        android:layout_alignTop="@+id/reiksme2"
        android:layout_alignRight="@+id/reiksme1"
        android:layout_alignEnd="@+id/reiksme1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/reiksme5"
        android:layout_marginTop="59dp"
        android:gravity="center|top"
        android:layout_marginBottom="63dp"
        android:text="Giedra"
        android:layout_above="@+id/reiksme2"
        android:layout_toStartOf="@+id/imageView2"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginRight="38dp"
        android:layout_below="@+id/reiksme1"
        android:layout_alignRight="@+id/reiksme1"
        android:layout_alignEnd="@+id/reiksme1"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginLeft="14dp" />

</RelativeLayout>