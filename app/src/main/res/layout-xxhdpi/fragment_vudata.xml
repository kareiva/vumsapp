<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/vudata">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daugiau"
        android:id="@+id/buttonExtended"
        android:onClick="openNewActivity"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/reiksme2"
        android:layout_toEndOf="@+id/textView4"
        android:layout_above="@+id/reiksme3"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="19sp"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginRight="109dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="VÄ—jo greitis: 100.9 kts"
        android:id="@+id/reiksme3"
        android:layout_above="@+id/buttonExtended"
        android:layout_marginBottom="22dp"
        android:layout_alignRight="@+id/reiksme2"
        android:layout_alignEnd="@+id/reiksme2"
        android:textSize="19sp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tiesioginiai duomenys is Vilniaus Universiteteo. Atnaujinta 2014-*05-05 17:45"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:textStyle="bold|italic"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="XXHDPI"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-99,9 OC"
        android:id="@+id/reiksme1"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="54dp"
        android:textColor="#ffffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="47dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/reiksme3"
        android:layout_toRightOf="@+id/reiksme3"
        android:layout_toEndOf="@+id/reiksme3"
        android:layout_marginRight="58dp"
        android:src="@drawable/v"
        android:layout_marginTop="21dp"
        android:layout_alignTop="@+id/reiksme2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:layout_marginTop="90dp"
        android:gravity="center|top"
        android:layout_marginBottom="49dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Giedra"
        android:layout_below="@+id/reiksme1"
        android:layout_above="@+id/reiksme2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginRight="30dp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/giedra_saule"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginBottom="86dp"
        android:layout_alignTop="@+id/reiksme1"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/buttonExtended"
        android:layout_alignEnd="@+id/buttonExtended"
        android:layout_marginRight="20dp" />

</RelativeLayout>