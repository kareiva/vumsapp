<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/meteo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Atnaujinta tada ir tada"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12dp"
        android:gravity="right" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="175dp"
        android:layout_marginBottom="271dp"
        android:src="@drawable/giedra_saule" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Orai Šiandien:"
        android:id="@+id/Day1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Orai Rytoj:"
        android:id="@+id/Day2"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="158dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:src="@drawable/giedra_saule"
        android:layout_marginBottom="95dp"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/Day2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Trumpalaikis lietus su perkūnija"
        android:id="@+id/reiskinys2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginBottom="36dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginRight="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-99,9 OC"
        android:id="@+id/reiksme11"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vejo greitis: 100 m/s "
        android:id="@+id/reiksme22"
        android:layout_below="@+id/reiksme11"
        android:layout_alignLeft="@+id/reiksme5"
        android:layout_alignStart="@+id/reiksme5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vejas2"
        android:src="@drawable/sv"
        android:layout_below="@+id/reiksme22"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Debesuotumas: 100%"
        android:id="@+id/reiksme33"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_below="@+id/vejas2"
        android:layout_toRightOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Slėgis: 1029.3 hPa"
        android:id="@+id/reiksme44"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_below="@+id/reiksme33"
        android:layout_toRightOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Krituliai: 99,9 mm"
        android:id="@+id/reiksme55"
        android:layout_toEndOf="@+id/textView5"
        android:layout_below="@+id/reiksme44"
        android:layout_alignLeft="@+id/reiksme22"
        android:layout_alignStart="@+id/reiksme22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Trumpalaikis lietus su perkūnija"
        android:id="@+id/reiskinys1"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_above="@+id/imageView2"
        android:layout_marginBottom="36dp"
        android:layout_below="@+id/reiksme3"
        android:layout_toStartOf="@+id/reiksme3"
        android:layout_alignRight="@+id/reiskinys2"
        android:layout_alignEnd="@+id/reiskinys2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-99,9 OC"
        android:id="@+id/reiksme1"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_alignRight="@+id/reiksme22"
        android:layout_alignEnd="@+id/reiksme22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vejo greitis: 100 m/s "
        android:id="@+id/reiksme2"
        android:layout_below="@+id/reiksme1"
        android:layout_alignLeft="@+id/reiksme1"
        android:layout_alignStart="@+id/reiksme1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vejas1"
        android:src="@drawable/sv"
        android:layout_below="@+id/reiksme2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Debesuotumas: 100%"
        android:id="@+id/reiksme3"
        android:layout_below="@+id/vejas1"
        android:layout_alignLeft="@+id/vejas1"
        android:layout_alignStart="@+id/vejas1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Slėgis: 1029.3 hPa"
        android:id="@+id/reiksme4"
        android:layout_below="@+id/reiksme3"
        android:layout_alignLeft="@+id/reiksme3"
        android:layout_alignStart="@+id/reiksme3"
        android:layout_alignRight="@+id/reiksme3"
        android:layout_alignEnd="@+id/reiksme3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Krituliai: 99,9 mm"
        android:id="@+id/reiksme5"
        android:layout_below="@+id/reiksme4"
        android:layout_alignLeft="@+id/reiksme4"
        android:layout_alignStart="@+id/reiksme4"
        android:layout_alignRight="@+id/reiksme4"
        android:layout_alignEnd="@+id/reiksme4" />

</RelativeLayout>