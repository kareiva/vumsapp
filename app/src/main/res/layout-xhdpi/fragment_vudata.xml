<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/vudata">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daugiau"
        android:id="@+id/buttonExtended"
        android:onClick="openNewActivity"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tiesioginiai duomenys is Vilniaus Universiteteo. Atnaujinta 2014-*05-05 17:45"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:gravity="right"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="XHDPI"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-99,9 OC"
        android:id="@+id/reiksme1"
        android:layout_marginTop="50dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView4"
        android:layout_marginRight="49dp"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_toEndOf="@+id/buttonExtended"
        android:layout_alignLeft="@+id/buttonExtended"
        android:layout_alignStart="@+id/buttonExtended"
        android:layout_marginLeft="75dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="VÄ—jo greitis: 10.9 kts"
        android:id="@+id/reiksme3"
        android:layout_toEndOf="@+id/textView4"
        android:textSize="16dp"
        android:textIsSelectable="false"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/buttonExtended"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginRight="49dp"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sl4gis 1000 hPa"
        android:id="@+id/reiksme2"
        android:layout_toEndOf="@+id/textView4"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/reiksme3"
        android:layout_alignLeft="@+id/reiksme3"
        android:layout_alignStart="@+id/reiksme3"
        android:layout_toStartOf="@+id/imageView2"
        android:gravity="center"
        android:layout_marginRight="26dp"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/reiksme5"
        android:layout_marginTop="86dp"
        android:gravity="top|center"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="84dp"
        android:text="Giedra"
        android:textStyle="bold"
        android:textSize="19dp"
        android:layout_above="@+id/reiksme2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginLeft="11dp"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_below="@+id/reiksme1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="92dp"
        android:src="@drawable/giedra_saule"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="38dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/reiksme2"
        android:layout_alignStart="@+id/reiksme2"
        android:layout_alignBottom="@+id/reiksme5"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/reiksme3"
        android:layout_toEndOf="@+id/buttonExtended"
        android:layout_marginRight="10dp"
        android:src="@drawable/v"
        android:layout_marginTop="19dp"
        android:layout_alignRight="@+id/reiksme1"
        android:layout_alignEnd="@+id/reiksme1"
        android:layout_alignLeft="@+id/reiksme1"
        android:layout_alignStart="@+id/reiksme1"
        android:layout_marginLeft="23dp"
        android:layout_below="@+id/reiksme5" />

</RelativeLayout>